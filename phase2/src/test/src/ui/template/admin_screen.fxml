<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="ui.AdminScreenController"
  xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">
  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <columnConstraints>
    <ColumnConstraints maxWidth="Infinity"
      halignment="CENTER" hgrow="ALWAYS">
    </ColumnConstraints>
  </columnConstraints>

  <!-- Add Title Label -->

  <fx:include fx:id="nav" source="nav_bar.fxml"/>

  <Label  text="Admin Screen"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2" GridPane.rowSpan="1"
          GridPane.halignment="CENTER">
      <font>
        <Font name="Comic Sans MS" size="24"></Font>
      </font>
  </Label>

  <!-- Add Return Button -->
  <Button fx:id="adminReturn" text="Return"
          prefWidth="100" prefHeight="20" defaultButton="false"
          GridPane.columnIndex="0" GridPane.rowIndex="28"
          GridPane.columnSpan="1" GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
          onAction="#handleAdminReturnButtonAction">
  </Button>
</GridPane>
